<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <table class="table">
          <thead>
            <tr>
              <th>name</th>
              <th><%= @book.user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @book.user.introduction %></th>
            </tr>
          </thead>
        </table>
        <div class="row">
          <%= link_to edit_user_path(@book.user_id), class:"btn btn-outline-secondary btn-block" do %>
            <i class="fas fa-user-cog fa-w-20"></i>
          <% end %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model: Book.new, url: books_path, method: :post do |f| %>
          <label for="book_title">Title</label>
          <%= f.text_field :title, class:"form-control book_title", id:"book_title" %>
          <label for="book_opinion">Opinion</label>
          <%= f.text_area :body, class:"form-control book_body", id:"book_opinion" %>
          <%= f.submit "Create Book", class:"btn btn-success" %>
        <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
              <%=link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %><br>
                <%= @book.user.name %>
              <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.body %></td>
              <td>
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path, class:"btn btn-sm btn-success" %>
              <% end %>
              </td>
              <td>
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
              <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>

